NAME	= phonebook

SRC		= Contact.cpp main.cpp PhoneBook.cpp 
OBJ		= $(SRC:.cpp=.o)

RM		= rm -rf
CC		= c++
FLAGS	= -Wall -Wextra -Werror -std=c++98

.c.o:
	@$(CC) $(FLAGS) -c $< -o $(<:.cpp=.o)

all 	: $(NAME) coffee

clean	:
	@$(RM) $(OBJ)

fclean	: clean
	@$(RM) $(NAME)

re		: fclean all

coffee	:

	@echo ⠀⠀⠀⢠⣾⣷⣦⡀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀
